        <a asp-area="" asp-controller="Contrato" asp-action="FormAM" class="btn btn-outline-dark">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus-lg"
                viewBox="0 0 16 16">
