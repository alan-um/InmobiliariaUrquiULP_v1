@model InmobiliariaUrquiULP_v1.Models.ViewModelLogin
@{
	ViewData["Title"] = "Ingresar";
}

<div class="ancho-850 border-bottom box-shadow">
	<div class="text-center">
		<h1 class="display-6">¡Bienvenido/a!
		</h1>
	</div>
</div>
<div class="row justify-content-center pt-5">
	<div class="col-md-4">
		<form asp-controller="Usuario" asp-action="Login">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group pb-4">
				<label asp-for="Email" class="control-label"></label>
				<input asp-for="Email" class="form-control no-arrows" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group pb-4">
				<label asp-for="Pass" class="control-label"></label>
				<input asp-for="Pass" class="form-control" />
				<span asp-validation-for="Pass" class="text-danger"></span>
			</div>
			
			<div class="form-group flex justify-content-evenly pt-3 pb-3">
				<input type="submit" value="Ingresar" class="btn btn-outline-dark" />
			</div>
		</form>
	</div>
</div>